＜チャット画面＞
<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <!--仮データであるhogefugaからコントローラーの内容を引っ張り出すモノに変更-->
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-botton">
      <%= link_to "チャットを終了する", room_path(@room), data: {turbo_method: :delete }%>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message',collection: @messages %>
</div>

<%= form_with model: [@room,@message], class: 'form',local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content,class: 'form-message', placeholder: 'type a message' %><!--こうなる-->
    <!--<input class="form-message" placeholder= "type a message">--><!--これが-->
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>